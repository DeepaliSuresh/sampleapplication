# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting

#Task application
GET     /tasks                   controllers.TodoController.getAllTasks
GET     /tasks/:id               controllers.TodoController.getTaskById(id: Long)
POST    /tasks                   controllers.TodoController.createTask
PUT     /tasks/:id               controllers.TodoController.updateTask(id: Long)
DELETE  /tasks/:id               controllers.TodoController.deleteTask(id: Long)
#aws application
POST    /upload                      controllers.FileController.uploadFileToS3()
GET     /download                    controllers.FileController.downloadFileFromS3()
#DELETE  /delete                      controllers.FileController.deleteFileFromS3()
#JWt
POST    /login                       controllers.AuthController.login()
GET     /refreshToken/:token         controllers.AuthController.refreshToken(token: String)
GET     /validateToken/:token        controllers.AuthController.validateToken(token: String)
GET     /logout/:token               controllers.AuthController.logout(token: String)
